{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": ["!.next/cache/**", ".next/**", "dist/**"],
      "env": [
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PAYMENT_DESCRIPTION",
        "SENDGRID_API_KEY",
        "NEXTAUTH_SECRET",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "RESEND_API_KEY",
        "NODE_ENV",
        "VERCEL_ENV",
        "LOCAL_AUTH_URL",
        "API_URL",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_SENTRY_DSN",
        "SENTRY_DSN",
        "WB_WEBHOOK_URL",
        "NEXT_PUBLIC_DEBUG",
        "SLACK_SECRET_ID",
        "SLACK_CLIENT_SECRET_ID",
        "NEXT_PUBLIC_SLACK_CLIENT_ID",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET_ID",
        "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
        "SLACK_CLIENT_ID",
        "NEXT_PUBLIC_MAILCHIMP_CLIENT_ID",
        "NEXT_PUBLIC_MAILCHIMP_CLIENT_SECRET_ID",
        "FROM_EMAIL",
        "NEXT_PUBLIC_AIRTABLE_CLIENT_ID",
        "NEXT_PUBLIC_AIRTABLE_CLIENT_SECRET_ID",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PWD",
        "NEXT_PUBLIC_DOCS_URL",
        "SLACK_ACTIVITY_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "db:generate": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:push": {
      "dependsOn": ["db:generate"],
      "cache": false
    },
    "db:migrate:deploy": {},
    "db:migrate:dev": {},
    "db:migrate:vercel": {}
  }
}
